#:kivy 1.0
		

<VideoPlayer2>:
	
	canvas.before: 
		Color:
			rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size

<Square>:
	
	canvas.before: 
		Color:
			rgb: self.color[0],self.color[1],self.color[2]
		BorderImage:
			source: self.texture_path
			border: 22,22,22,22
			size: self.size
		Color:
			rgb: 1,1,1
		Rectangle:
			texture: self.layer_texture_path
			size: (self.width - 2*self.padding, self.height - 2*self.padding)
			pos: (self.padding,self.padding)
                        

<GeometrySquare>:
	
	canvas.before: 
		Color:
			rgb: 1,1,1
		BorderImage:
			source: self.style['texture_path']
			border: 12,12,12,12
			size: self.size

		

<Bar>:
	width:135

<Field>:
	size:self.size
	bar_width:135	

<Label3>:
	canvas.before:
		Color:
			rgb: .24,.24,.24
		Rectangle:
			pos: self.pos
			size: self.size
		

<AppView>:
	bar_width:135
	canvas.before:
		Color:
			rgb: .24,.24,.24
		Rectangle:
			pos: (0,0)
			size: self.size
		Rectangle:
			texture: root.texture_sidebar
			tex_coords: [root.texture_sidebar, 0, 0, 1, 0, 1, self.height / 5, 0, self.height / 5][1:]
			pos: (0,0)
			size: (self.bar_width,self.height)

<VideoPlayer2>
	canvas.before:
		Color:
			rgb: .24,.24,.24
		Rectangle:
			pos: (0,0)
			size: self.size


